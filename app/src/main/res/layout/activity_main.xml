<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="one.sop.netpie.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_margin="8dp"
        android:background="#ffff50"
        android:gravity="bottom"
        android:maxLines="9"
        android:text="Hello World!"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSend"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="ใส่ข้อความ Topic"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonSend"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ส่ง"
        app:layout_constraintLeft_toRightOf="@+id/editTextSend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextChat"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:hint="ใส่ข้อความ Chat"
        app:layout_constraintLeft_toLeftOf="@+id/editTextSend"
        app:layout_constraintRight_toRightOf="@+id/editTextSend"
        app:layout_constraintTop_toBottomOf="@+id/editTextSend" />

    <Button
        android:id="@+id/buttonChat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="คุย"
        app:layout_constraintRight_toRightOf="@+id/buttonSend"
        app:layout_constraintTop_toBottomOf="@+id/buttonSend" />

</android.support.constraint.ConstraintLayout>
